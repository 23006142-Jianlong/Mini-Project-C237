<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Ink Pages ðŸ“š</title>
    <link rel='stylesheet' href="/styles.css">
</head>
<body>
    <!-- Include Title Card Partial -->
    <%- include('partials/titleCard') %>
    
    <!-- Include Navbar Partial -->
    <%- include('partials/navbar') %>
    
    <!-- Cards Container -->
    <div class="container mt-3">
        <div class="row">
            <% books.forEach(book => { %>
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="<%= book.cover_image %>" alt="Book image">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/ViewBook/<%= book.manga_id %>"><%= book.title %></a></h5>
                        <p class="card-text"><%= book.description %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/deleteBook/<%= book.manga_id %>" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                                <a href="/editBook/<%= book.manga_id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                            <small class="text-muted ms-3">Price: $<%= book.price.toFixed(2) %></small>
                        </div>
                        <div class="mt-3">
                        <form action="/addToCart" method="POST" class="mt-2"></form>
                            <input type="hidden" name="manga_id" value="<%= book.manga_id %>">
                            <button type="button" class="btn btn-sm btn-primary w-100">Add to Cart</button>
                        </div>
                        
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
</html>

