<!-- views/EditBook.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Edit Book</title>
    <link rel='stylesheet' href="/styles.css">
</head>
<body>
    <!-- Include Navbar Partial -->
    <%- include('partials/navbar') %>

    <div class="container mt-3">
        <h2>Edit Book</h2>
        <form action="/editBook/<%= book.manga_id %>" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Book Name</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" required>
            </div>
            <div class="mb-3">
                <label for="cover_image" class="form-label">Book Image URL</label>
                <input type="text" class="form-control" id="cover_image" name="cover_image" value="<%= book.cover_image %>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Book Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required><%= book.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="stock_quantity" class="form-label">Stock Quantity</label>
                <input type="number" class="form-control" id="stock_quantity" name="stock_quantity" value="<%= book.stock_quantity %>" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price" step="0.01" value="<%= book.price %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</body>
</html>
