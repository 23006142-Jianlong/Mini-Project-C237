<!-- book.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Book App</title>
</head>
<body>
    <!--Title Card-->
    <%- include('partials/Titlecard.ejs') %>
    <!--Nav Bar-->
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Book Details</h2></div>
        <br>
        <% if (book) { %> <!-- Check if book data exists -->
            <div>
                <p><b>Book Name:</b><br> <%= book.title %></p>
                <p><b>Book Image:</b><br> <img src = "<%= book.cover_image %>" width="35%"></p>
                <p><b>Book description:</b><br> <%= book.description %></p>
                <p><b>Quantity left:</b><br> <%= book.stock_quantity %></p>
                <p><b>Price:</b><br> $<%= book.price.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No book found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
</body>
</html>
