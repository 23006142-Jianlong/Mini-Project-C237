<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Cart</title>
    <link rel='stylesheet' href="/styles.css">
</head>
<body>
    <!-- Include title -->
    <%- include('partials/Titlecard.ejs') %>

    <!-- Include Navbar Partial -->
    <%- include('partials/navbar') %>

    <div class="container mt-3">
        <h2>Your Cart</h2>
        <% if (cart && cart.length > 0) { %>
            <div class="row">
                <% cart.forEach(item => { %>
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="<%= item.cover_image %>" alt="Book image">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.title %></h5>
                                <p class="card-text"><%= item.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Price: $<%= item.price.toFixed(2) %></small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <a href="/removeFromCart/<%= item.manga_id %>" class="btn btn-sm btn-outline-danger">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="mt-3">
                <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
            </div>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>
</body>
</html>
